
<br>
<div class="jumbotron p-3 mb-2 bg-dark text-white">
  
  <p> <h6>Book Name: <%=  @book.title%> </h6></p>
  <p> Description: <%=  @book.description%> </p>
  

  <hr class="my-4">


  <br><br>
  <h2>Comments</h2>
  <% if @comments.any? %>
    <% @comments.each do |comment| %>
      <%= comment.content %>
      
  <% end %>
  <% else %>
    <h6> No comments </h6>
  <% end %>

</div>



