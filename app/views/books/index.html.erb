
<% if notice.present? %>

  <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
    <%= notice %> 
    <button type="button" class="btn-close mb-3" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

<% end %>


<div class='bg-dark text-white' style="height: 100%;">

  <% if @books.any? %>
  <h1 class="text-center ">Books Collection</h1>

    <div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 mb-4 mt-3">
        <div class="card" style="width: 400px; height: 500px;">
          <%= image_tag book.image, style: "width: 100%; height: 70%; object-fit: cover;" if book.image.attached? %>
          <div class="card-body" style="width: 100%; height: 30%; padding: 15px;">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><%= book.description %></p>
            <%= link_to 'Show Book', book_path(book.id), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

</div>

</div>

  </div>
</div>
  
     
  <% else %>
      <h2>You have no books</h2>
      
  <% end %>
  <br>



</div>



