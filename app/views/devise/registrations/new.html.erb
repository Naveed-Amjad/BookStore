<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">
                <div class="mb-md-5 mt-md-4 pb-5">
                  <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
                  <p class="text-white-50 mb-5">Please enter your details to create an account!</p>


                  <% if resource.errors[:email].any? %>
                    <div class="error-message" style="color: red; font-weight: bold;">
                      <%= resource.errors.full_messages_for(:email).join(", ") %>
                    </div>
                  <% end %>

                  <div class="form-outline form-white mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control form-control-lg" %>
                    <%= f.label :email, class:"form-label" %><br />
                  </div>


                  <% if resource.errors[:password].any? %>
                    <div class="error-message" style="color: red; font-weight: bold;">
                      <%= resource.errors.full_messages_for(:password).join(", ") %>
                    </div>
                  <% end %>


                  <div class="field form-group">
                    <br>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class:"form-control form-control-lg" %>
                  </div>



                  <br>
                  <% if resource.errors[:password_confirmation].any? %>
                    <div class="error-message" style="color: red; font-weight: bold;">
                      <%= resource.errors.full_messages_for(:password_confirmation).join(", ") %>
                    </div>
                  <% end %>

                  
                  <div class="field form-group">
                    <br>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class:"form-control form-control-lg" %>
                  </div>

                  <br>
                  <div class="field form-group">
                    <%= f.label :role, 'Select Role' %>
                    <%= f.select :role, User.roles.keys, {}, class: 'form-control form-control-lg' %>
                  </div>

                  <br>
                  <div class="actions">
                    <%= f.submit "Sign Up", class:"btn btn-outline-light btn-lg px-5" %>
                  </div>

                  <div class="d-flex justify-content-center text-center mt-4 pt-1">
                    <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                  </div>
                </div>

                <div>
                  <p class="mb-0">Already have an account? <%= link_to 'Login', new_user_session_path, class:"text-white-50 fw-bold" %><br />
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>
